{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-typescript/base",
    "tslint:latest",
    "tslint-config-prettier",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["jest", "prettier", "only-warn"],
  "rules": {
    "max-len": [2, 120, 4],
    "camelcase": 0
  }
}
